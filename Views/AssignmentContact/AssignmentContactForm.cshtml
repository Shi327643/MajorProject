@model TravelBookingProject.ViewModel.AssignmentContactViewModel
@{
    ViewBag.Title = "AssignmentContactForm";
}
<style>
    body {
        background-color: cornsilk;
    }
</style>

<h2 class="text-center" style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;color:darkgreen; font-size:45px; font-weight:200">Assignment Contacts</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" });
<table class="table" class="table" style="font-size:15px; background-color:azure">
    <tr>
        <td>
            @Html.Label("Name of budget holder for this request:")
        </td>
        <td>
            @Html.TextBoxFor(m => m.BudgetHolderName, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.Label("Budget Holder Email Address:")
        </td>
        <td>
            @Html.TextBoxFor(m => m.BudgetHolder_Email, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.Label("Home HR Director name:")
        </td>
        <td>
            @Html.TextBoxFor(m => m.Home_HR_Director_Name, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.Label("Home HR Director Email Address:")
        </td>
        <td>
            @Html.TextBoxFor(m => m.Home_HR_Director_Email, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.Label("Home Line Manager Name:")
        </td>
        <td>
            @Html.TextBoxFor(m => m.Home_Line_Manager_Name, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.Label("Home Line Manager Email Address:")
        </td>
        <td>
            @Html.TextBoxFor(m => m.Home_Line_Manager_Email, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.Label("Host HR Director name:")
        </td>
        <td>
            @Html.TextBoxFor(m => m.Host_HR_Director_Name, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.Label("Host HR Director Email Address:")
        </td>
        <td>
            @Html.TextBoxFor(m => m.Host_HR_Director_Email, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.Label("Host line Manager Name(if applicable, otherwise specify NA):")
        </td>
        <td>
            @Html.TextBoxFor(m => m.Host_Line_Manager_Name, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.Label("Host Line Manager Email(if applicable, otherwise specify NA):")
        </td>
        <td>
            @Html.TextBoxFor(m => m.Host_Line_Manager_Email, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td colspan="2" style="text-align:center">
            <input type="submit" class="btn btn-success" style="height:50px; width:100px; font-size:20px; background-color:chartreuse; color:black; margin-left:100px" onclick="if (confirm('Are the details entered by you correct?')) {return true;} else {return false;}" />
        </td>
    </tr>
</table>
}