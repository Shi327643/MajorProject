@model TravelBookingProject.ViewModel.LoginpageViewModel

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>                    @*We are doing this to validate the field at client side*@
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@section head{
    <style type="text/css">
        body {
            background-image: url('/Content/images/bg4.jpg');
            margin: 0;
            background-size: 1110px;
        }
    </style>
}




@*//<img src="~/Content/images/logo.png" style="height:90px; width:300px; margin:0"  />*@
<div class="center-block">

    <img src="~/Content/images/user.png" style="height:100px; width:100px; margin-left:530px; margin-top:15px" />
    <h2 class="text-center" style="color:brown; font-style:initial; font-family:'Times New Roman', Times, serif; font-size:35px">
        Employee Login
    </h2>
</div>

<div class="center-block" style="margin-top:50px; background-color:none; font-size:25px; color:darkslategrey">
@using (Html.BeginForm())
{    
    @Html.ValidationSummary(false, "", new { @class = "text-danger" });
<table class="table">

    <tr>
        <td>@Html.LabelFor(m => m.UserName)</td>
        <td>
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            <span class="text-danger">@Html.ValidationMessageFor(m => m.UserName)</span>
        </td>
    </tr>
    <tr>
        <td>@Html.LabelFor(m => m.Password)</td>
        <td>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            <span class="text-danger">@Html.ValidationMessageFor(m => m.Password)</span>
        </td>
    </tr>

    <tr>
        <td colspan="2" style="text-align:center">
            <input type="submit" class="btn btn-success" style="height:50px; width:100px; font-size:20px" />
        </td>
    </tr>




</table>


}
</div>






